<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.calculator.MainActivity"
    android:background="@android:color/holo_orange_dark"
    android:padding="0dp">

    <Button
        android:text="1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btn1"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:layout_above="@+id/btnClear"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber"
        android:fontFamily="sans-serif"
        android:background="@color/colorAccent" />

    <Button
        android:text="4"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btn4"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:layout_above="@+id/btn1"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber"
        android:fontFamily="sans-serif"
        android:background="@color/colorAccent" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:id="@+id/textView"
        android:background="@android:color/background_light"
        android:textSize="50sp"
        android:textAlignment="viewEnd"
        android:gravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btn7"
        android:maxLines="3"
        android:maxLength="36" />

    <Button
        android:text="C"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btnClear"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:onClick="onClickClear"
        android:background="@android:color/holo_orange_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="0"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btn0"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:onClick="onClickNumber"
        android:fontFamily="sans-serif"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btn1" />

    <Button
        android:text="="
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btnEqual"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:onClick="onClickEqual"
        android:background="@android:color/holo_orange_light"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btn0" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btndIV"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:text="รท"
        android:onClick="onClickOperator"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnEqual" />

    <Button
        android:text="x"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btnMult"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:onClick="onClickOperator"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/btndIV"
        android:layout_toEndOf="@+id/btn3" />

    <Button
        android:text="3"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btn3"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        style="btn7"
        android:onClick="onClickNumber"
        android:fontFamily="sans-serif"
        android:background="@color/colorAccent"
        android:layout_above="@+id/btn0"
        android:layout_toEndOf="@+id/btn2" />

    <Button
        android:text="-"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btnMinus"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:onClick="onClickOperator"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/btnMult"
        android:layout_toEndOf="@+id/btn6" />

    <Button
        android:text="6"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btn6"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:onClick="onClickNumber"
        android:fontFamily="sans-serif"
        android:background="@color/colorAccent"
        android:layout_above="@+id/btn3"
        android:layout_toEndOf="@+id/btn5" />

    <Button
        android:text="7"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btn7"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        style="btn7"
        android:onClick="onClickNumber"
        android:fontFamily="sans-serif"
        android:background="@color/colorAccent"
        android:layout_above="@+id/btn4"
        android:layout_alignParentStart="true" />

    <Button
        android:text="2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btn2"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:onClick="onClickNumber"
        android:fontFamily="sans-serif"
        android:background="@color/colorAccent"
        android:layout_below="@+id/btn6"
        android:layout_toEndOf="@+id/btn1" />

    <Button
        android:text="5"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btn5"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:onClick="onClickNumber"
        android:fontFamily="sans-serif"
        android:background="@color/colorAccent"
        android:layout_above="@+id/btn3"
        android:layout_toEndOf="@+id/btn1" />

    <Button
        android:text="8"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btn8"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:onClick="onClickNumber"
        android:fontFamily="sans-serif"
        android:background="@color/colorAccent"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn7" />

    <Button
        android:text="9"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btn9"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:onClick="onClickNumber"
        android:fontFamily="sans-serif"
        android:background="@color/colorAccent"
        android:layout_above="@+id/btnMinus"
        android:layout_toEndOf="@+id/btn5" />

    <Button
        android:text="+"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/btnPlus"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:onClick="onClickOperator"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/btnMinus"
        android:layout_toEndOf="@+id/btn9" />

</RelativeLayout>
